<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/to_msg_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#bebebe"
        android:text="2012-12-12 12:12:12"
        android:textColor="#f5f5f5"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/to_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/chatto_bg_normal"
            android:gravity="center"
            android:text="你好" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/to_msg_icon"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@mipmap/wife" />

            <TextView
                android:id="@+id/to_msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="regret"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>