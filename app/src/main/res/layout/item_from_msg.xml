<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/from_msg_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#bebebe"
        android:text="2012-12-12 12:12:12"
        android:textColor="#f5f5f5"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.example.dmrf.intelligentassistant.View.XCRoundImageView
                android:id="@+id/from_msg_icon"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/meicon" />

            <TextView
                android:id="@+id/from_msg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from_msg_icon"
                android:layout_gravity="center_horizontal"
                android:text="岗岗"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:layout_marginRight="25dp"
            android:id="@+id/from_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/l1"
            android:autoLink="all"
            android:background="@mipmap/chatfrom_bg_pressed"
            android:enabled="true"
            android:focusable="true"
            android:gravity="left"
            android:longClickable="true"
            android:text="你好"
            android:textIsSelectable="true" />


    </RelativeLayout>

</LinearLayout>